        </dependency>
        <dependency>
            <groupId>org.geotools</groupId>
            <artifactId>gt-coveragetools</artifactId>
            <version>${gt-coveragetools.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>net.sf.ehcache</groupId>
                    <artifactId>ehcache</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.geotools</groupId>
